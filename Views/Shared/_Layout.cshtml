<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Laguna</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"  />
    <link rel="stylesheet" href="~/css/index.css"/>
    <link rel="stylesheet" href="~/css/category.css"/>
    <script src="~/js/localStorage.js" asp-append-version="true"></script>
    <script src="~/js/Index/CountBasket.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/promocode.js" asp-append-version="true"></script>
</head>
<body>

    <div  class="header header_fixed ">
        <div class="row">
            <div class="col-10">Laguna</div>
            <div class="col-2 d-flex align-items-center justify-content-end">
                <div class="d-flex justify-content-around align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-telephone svg" viewBox="0 0 16 16">
                        <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg"  xmlns:xlink="http://www.w3.org/1999/xlink" class="svg" width="31.99" height="31.99" viewBox="0 0 208 208">
                        <image id="Слой_1" data-name="Слой 1" x="16" y="12" width="176" height="192" xlink:href="data:img/png;base64,"/>
                        <image id="Слой_2" data-name="Слой 2" x="16" y="12" width="176" height="192" xlink:href="data:img/png;base64,"/>
                    </svg>
                </div>
                <a class="redButton" href="~/basket">
                    <span id="count"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="svg" width="20" height="20" viewBox="0 0 2133 2133">
                        <image id="Слой_3" data-name="Слой 3" x="597" y="1253" width="943" height="501" xlink:href="data:img/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAICAYAAADJEc7MAAAAl0lEQVQYlY2RsQrCQBBE30m08CcU0UK/wc5CP9mfUESRw0DAQvIDQUEkJAzs4XmmyDS7M8xrdl1VljfgAWz4ygFH4Ams+dUemAlsLB4Bn2h/2+4ibADUYTlYOOVfrySZ2LwIPJuZd4CpQuck0JtZ9ABDxwvMzax6gEubucDCzK6jOE781maRAXrHHbhGBV1XXu+IpWwI+BbLOiB90/KcqgAAAABJRU5ErkJggg=="/>
                        <image id="Слой_2" data-name="Слой 2" y="129" width="2133" height="1875" xlink:href="data:img/png;base64,"/>
                    </svg>

                </a>
            </div>
        </div>
        <nav id="nav">
            @if(!ViewBag.IsAdmin){
                foreach (var item in ViewBag.Categories)
                {
                    <a class="redButton" href="~/product/@item.Name">@item.Name</a>
                }
            }
            else{
                <a class="redButton" href="~/AdminPanelProduct/Products">Список продуктов</a>
                <a class="redButton" href="~/AdminPanelProduct/createproduct">Создать продукт</a>
                <a class="redButton" href="~/AdminPanel/category">Управление категориями</a>
                <a class="redButton" href="~/AdminPanelOrders/orders">Заказы</a>
                <a class="redButton" href="~/AdminPanelPromocode/GetPromocodes">Список промокодов</a>
                <a class="redButton" href="~/AdminPanelPromocode/CreatePromocode">Создать промокод</a>
            }
        </nav>
    </div>

    <div>
        <main role="main" class="pb-3 content">
            @RenderBody()
        </main>
    </div>

    <script>
        countBasket();
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
