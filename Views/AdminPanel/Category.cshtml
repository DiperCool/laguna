<!DOCTYPE html>
<html>
    <head>
               
    </head>
    <body>
       <div>
           <h1>Добавление</h1>
           <input type="text" id="add-name" placeholder="Введите название">
           <input type="file" id="add-file">
           <button id="add-button">Добавить</button>
       </div>
        <br>
       <div>
           <h1>Изменение</h1>
           <select id="change-select" class="select-category">
               <option value="0">--Выберите--</option>
                @foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.Id" >@item.Name</option>
                }
           </select>
           <input id="change-name" type="text" placeholder="Введите новое название">
           <input type="file" id="change-file">
           <button id="change-button">Изменить</button>
       </div>
       <br>
       <div>
            <h1>Удаление</h1>
            <select id="del-select" class="select-category">
               <option value="0">--Выберите--</option>
                @foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.Id" >@item.Name</option>
                }
            </select>
            <button id="del-button">Удалить</button>
       </div>
    <script src="~/js/CategoryAdminPanel/CategoryCreate.js"asp-append-version="true" ></script>
    <script src="~/js/CategoryAdminPanel/CategoryChange.js"asp-append-version="true" ></script>
    <script src="~/js/CategoryAdminPanel/CetegoryDelete.js"asp-append-version="true"></script>
    </body>
</html>